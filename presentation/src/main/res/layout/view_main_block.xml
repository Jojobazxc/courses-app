<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBlockContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_filed_bg"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white_text_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8.dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Пароль"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:autofillHints=""
        android:background="@drawable/text_filed_bg"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white_text_color"
        android:textSize="14sp" />

    <Button
        android:id="@+id/authButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/green_text_and_button_color"
        android:enabled="true"
        android:fontFamily="@font/roboto_medium"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Первая строка: "Нет аккаунта? Регистрация" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="3dp"
                android:text="Нету аккаунта?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="3dp"
                android:text=" Регистрация"
                android:textColor="@color/green_text_and_button_color"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Вторая строка: "Забыл пароль" -->
        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="3dp"
            android:text="Забыл пароль"
            android:textColor="@color/green_text_and_button_color"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/divider_color" />
</LinearLayout>
